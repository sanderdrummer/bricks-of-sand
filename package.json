{
  "name": "bricks-of-sand",
  "version": "0.1.2",
  "description": "another react component library",
  "author": "sanderdrummer",
  "license": "MIT",
  "repository": "sanderdrummer/bricks-of-sand",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts-ts test --env=jsdom",
    "test:watch": "react-scripts-ts test --env=jsdom",
    "lint-fix": "tslint --fix src/**/*.tsx -t verbose",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "starte": "cd example && yarn start",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "@emotion/core": "^10.0.5",
    "@emotion/styled": "^10.0.5",
    "downshift": "3.1.0",
    "emotion-theming": "^10.0.5"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.5",
    "@types/gh-pages": "^2.0.0",
    "@types/jest": "^23.1.5",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.1.4",
    "gh-pages": "^2.0.0",
    "react": "16.6.1",
    "react-dom": "16.6.1",
    "react-scripts-ts": "^3.1.0",
    "rollup": "^1.0.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss-modules": "^1.0.8",
    "rollup-plugin-typescript2": "^0.18.1",
    "rollup-plugin-url": "^2.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "files": [
    "dist"
  ]
}
